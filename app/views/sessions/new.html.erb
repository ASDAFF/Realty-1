<h2>Вход на сайт</h2>
<hr>
<% form_tag session_url do %>
  <p>
    <%= label_tag :email, t('helpers.label.user.email') %>
    <%= text_field_tag :email %>
  </p>
  <p>
    <%= label_tag :password, t('helpers.label.user.password') %>
    <%= password_field_tag :password %>
  </p>
  <p>
    <%= submit_tag "Войти" %>
  </p>
<% end %>
